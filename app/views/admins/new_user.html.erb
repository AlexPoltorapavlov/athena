<h2>Создание нового пользователя</h2>
<%= form_with(model: @user, url: create_user_path, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :username, 'Фамилия и Имя', class: 'form-label' %>
    <%= form.text_field :username, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email, 'Email', class: 'form-label' %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :telegram_link, 'Ссылка на пользователя (без @)', class: 'form-label' %>
    <%= form.text_field :telegram_link, class: 'form-control' %>
  </div>

  <%= form.submit "Добавить", class: 'btn btn-dark mt-3' %>
<% end %>
