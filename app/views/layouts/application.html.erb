<!DOCTYPE html>
<html>
  <head>
    <title>Athena</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_importmap_tags %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" %>
  </head>

  <body data-controller='auth'>
    <div class="container-fluid">
      <div class="row">
        <% if !current_user.nil? %>
          <div class="btn-group" role="group">
            <% if !current_user.nil? %>
              <%= button_to "Выйти", destroy_user_session_path, method: :delete, class: 'btn btn-primary' %>
            <% else %>
              <%= button_to "Войти", new_user_session_path, method: :get, class: 'btn btn-outline-primary me-md-2' %>
              <%= button_to "Регистрация", new_user_registration_path, method: :get, class: 'btn btn-outline-primary' %>
            <% end %>
          </div>
          <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar p-3" data-auth-target="sidebar">
            <div class="position-sticky">
              <ul class="nav flex-column">
                <li class="nav-item text-dark">
                  <p class='text-dark'>
                    Меню
                  </p>
                </li>
                  <li class="nav-item">
                    <%= link_to (can?(:manage, :all) ? 'Администратор' : 'Пользователь'), root_path, class: 'text-dark bg-light btn btn-outline-secondary' %>
                  </li>
                <li class="nav-item text-dark">
                  <a class="text-dark bg-light btn btn-outline-secondary" href="#">
                    Bootstrap
                  </a>
                </li>
                <li class="nav-item text-dark">
                  <a class="text-dark bg-light btn btn-outline-secondary" href="#">
                    Bootstrap
                  </a>
                </li>
              </ul>
            </div>
          </nav>
        <% end %>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <div class="my-3">
        <% flash.each do |type, msg| %>
          <% case type %>
          <% when "alert" %>
            <div class="alert alert-danger">
              <%= msg %>
            </div>
          <% when "notice" %>
            <div class="alert alert-success">
              <%= msg %>
            </div>
          <% end %>
        <% end %>
      </div>


      <%= yield %>
        </main>
      </div>
    </div>

  </body>
</html>

