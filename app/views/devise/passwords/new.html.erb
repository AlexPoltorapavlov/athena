<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-light text-dark" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <h3 class="fw-bold mb-4 text-uppercase">Восстановление пароля</h3>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-outline form-white mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Электронная почта" %>
  </div>

              <div class="actions d-grid gap-2">
                <%= f.submit "Отправить инструкции по сбросу пароля", class: "btn btn-dark" %>
  </div>
<% end %>

            <div class="mt-4">
              <%= link_to "Войти", new_session_path(resource_name), class: "text-dark-50" %>
              |
              <%= link_to "Зарегистрироваться", new_registration_path(resource_name), class: "text-dark-50" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
