<section class="vh-100 d-flex justify-content-center align-items-center">
        <div class="card bg-light text-dark" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <h3 class="fw-bold mb-4 text-uppercase">Регистрация</h3>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-outline form-white mb-4">
                <%= f.text_field :email, autofocus: true, class: "form-control form-control-lg", placeholder: "Электронная почта" %>
  </div>

              <div class="form-outline form-white mb-4">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Пароль" %>
  </div>

              <div class="form-outline form-white mb-4">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Подтверждение пароля" %>
  </div>

              <div class="actions d-grid gap-2">
                <%= f.submit "Зарегистрироваться", class: "btn btn-dark" %>
  </div>
<% end %>

            <div class="mt-4">
              <p>Уже есть аккаунт?</p>
              <%= link_to "Войти", new_session_path(resource_name), class: "text-dark-50" %>
            </div>
          </div>
        </div>
</section>
